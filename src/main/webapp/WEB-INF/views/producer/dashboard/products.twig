{% extends "producer/dashboard/index.twig" %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ labels.producer_dashboard_index_item_shops }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p>
                {{ labels.producer_dashboard_shops_body_message }}
            </p>
        </div>
    </div>
            
    <div class="row">
        <div class="col-lg-12">
            <a href="/app/producer/dashboard/shops/new" class="btn btn-default">
                {{ labels.producer_dashboard_shops_button_new }}
            </a>
        </div>
    </div>
            
    <div class="row">
        <div class="col-lg-12">
            {% if shops is empty %}
                <p>
                    {{ labels.producer_dashboard_shops_table_nocontent }}
                </p>
            {% else %}
                <div class="table-responsive">            
                    <table class="table table-hover table-striped submitted-photos-table">
                        <thead>
                            <tr>
                                <th>
                                    {{ labels.producer_dashboard_shops_table_loginname }}                                    
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_shops_table_owner }}                                    
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_shops_table_picturecount }}
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_shops_table_picturesessioncount }}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for shop in shops %}
                                <tr>                                    
                                    <td>
                                        {{ shop.login }}
                                    </td>
                                    <td>
                                        {{ shop.photographer.name }}
                                    </td>
                                    <td>
                                        {{ shop.pictures.size }}
                                    </td>
                                    <td>
                                        
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}