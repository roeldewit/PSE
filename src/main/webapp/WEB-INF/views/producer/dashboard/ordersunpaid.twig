{% extends "producer/dashboard/index.twig" %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ labels.producer_dashboard_index_item_unpaid_orders }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p>
                {{ labels.producer_dashboard_orders_body_message_unpaid }} 
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">

        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {% if orders is empty %}
                <p>
                    {{ labels.producer_dashboard_shops_table_nocontent }}
                </p>
            {% else %}
                <div class="table-responsive">            
                    <table class="table table-hover table-striped submitted-photos-table">
                        <thead>
                            <tr>
                                <th>
                                    {{ labels.producer_dashboard_orders_order_id }}                        
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_orders_customer_login }}                      
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_orders_status }}     
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_orders_method }}                    
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_orders_total_amount }}                       
                                </th>

                                <th>
                                    {{ labels.producer_dashboard_orders_create_date }}                       
                                </th>
                                <th>
                                    {{ labels.producer_dashboard_orders_customer_email }}                
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}

                                {% if order.molliePaymentStatus == order.molliePaymentStatus.OPEN %}

                                    <tr>                                    
                                        <td>
                                            {{ order.id }}
                                        </td>
                                        <td>
                                            {{ order.account.login }}
                                        </td>
                                        <td>
                                            {{ order.molliePaymentStatus }}
                                        </td>
                                        <td>
                                            {{  order.molliePaymentMethod }}
                                        </td>
                                        <td>
                                            {{ order.priceSum | numberformat("#.##") }}

                                        </td>
                                        <td>
                                            {{ order.molliePaymentCreatedDate }}

                                        </td>
                                        <td>
                                            {{ order.account.customer.email }}

                                        </td>
                                    </tr>

                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}