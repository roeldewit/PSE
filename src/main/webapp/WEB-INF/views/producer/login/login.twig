{% extends "common/bootstrap.twig" %}

{% block title %}
    <title>{{ labels.producer_login_page_title }}</title>
{% endblock %}

{% block more_css %}
    <link href="/assets/producer/css/login.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container">
    {% if error is not empty %}
        <p class="error">{{ error }}</p>
    {% endif %}
    <form class="form-signin" action="/app/producer/login" method="post">
        <h2 class="form-signin-heading">
            {{ labels.producer_login_login_label }}:
        </h2>
        <label for="login_name" class="sr-only">
            {{ labels.producer_login_loginname_label }}
        </label>
        <input type="text" id="login_name" name="login_name" class="form-control" placeholder="{{ labels.producer_login_password_label }}" required autofocus>
        <label for="password" class="sr-only">
            {{ labels.producer_login_password_label }}
        </label>
        <input type="password" id="password" name="password" class="form-control" placeholder="{{ labels.producer_login_login_button }}" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">
            {{ labels.producer_login_login_button }}
        </button>
    </form>
</div>
{% endblock %}