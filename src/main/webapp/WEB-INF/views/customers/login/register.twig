{% extends "common/bootstrap.twig" %}

{% block title %}
    {{ labels.customer_register_page_title }}
{% endblock %}

{% block more_css %}
    <link href="/assets/common/css/default.css" rel="stylesheet"/>
   <link href="/assets/customers/css/register.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="container">
        {% if error is not empty %}
            <p class="error">{{ error }}</p>
        {% endif %}


        {% if error is not empty %}
            <p class="error">{{ error }}</p>
        {% endif %}

        <form class="form-signup" method="post" role="form">
            <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="/app/customers/login">{{labels.customer_register_signin_label}}</a>
            </div>
            <h2 class="form-signup-heading">
                {{ labels.customer_register_register_label }}:
            </h2>
            <label for="customer_name" class="sr-only">
                {{ labels.customer_register_name_label }}:
            </label>
            <input type="text" id="customer_name" name="customer_name" class="form-control" placeholder="{{ labels.customer_register_name_label }}" required autofocus>

            <label for="customer_adress" class="sr-only">
                {{ labels.customer_register_adress_label }}:
            </label>
            <input type="text" id="customer_adress" name="customer_adress" class="form-control" placeholder="{{ labels.customer_register_adress_label }}" required autofocus>

            <label for="customer_adress" class="sr-only">
                {{ labels.customer_register_city_label }}:
            </label>
            <input type="text" id="customer_city" name="customer_city" class="form-control" placeholder="{{ labels.customer_register_city_label }}" required autofocus>

            <label for="customer_phone" class="sr-only">
                {{ labels.customer_register_phone_label }}:
            </label>
            <input type="number" id="customer_phone" name="customer_phone" class="form-control" placeholder="{{ labels.customer_register_phone_label }}" required autofocus>

            <label for="customer_email" class="sr-only">
                {{ labels.customer_register_email_label }}:
            </label>
            <input type="email" id="customer_email" name="customer_email" class="form-control" placeholder="{{ labels.customer_register_email_label }}" required autofocus>


            <label for="login" class="sr-only">
                {{ labels.customer_login_loginname_label }}
            </label>
            <input name="login" class="form-control" placeholder="{{ labels.customer_login_loginname_label }}" required autofocus>

            <label for="password" class="sr-only">
                {{ labels.customer_login_password_label }}:
            </label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="{{ labels.customer_login_password_label }}" required autofocus>

{#
            <label for="password" class="sr-only">
                {{ labels.customer_login_repeat_password_label }}:
            </label>
            <input type="password" id="passwordConfirm" name="passwordConfirm"  class="form-control" placeholder="{{ labels.customer_login_repeat_password_label }}">#}

            <button class="btn btn-lg btn-primary btn-block" type="submit">
                {{ labels.customer_register_register_button }}
            </button>
        </form>
            <BR><BR> 
    </div>

    {% include "common/snippets/language_bar.twig" %}

{% endblock %}