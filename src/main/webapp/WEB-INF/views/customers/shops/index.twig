{% extends "common/bootstrap.twig" %}

{% block title %}
    Fotoz
{% endblock %}

{% block more_css %}

    <link href="/assets/common/css/bootstrap/sb-admin/font-awesome/css/font-awesome.min.css" rel="stylesheet"/>

    <link href="/assets/customers/css/shop-homepage.css" rel="stylesheet"/>

    <link href="/assets/customers/css/default.css" rel="stylesheet"/>
    <link href="/assets/common/css/default.css" rel="stylesheet"/>
{% endblock %}

{% block more_js %}
    <script src="/assets/common/js/js.cookie.js"></script>
    <script src="/assets/common/js/jquery.format-1.3.min.js"></script>
    <script src="/assets/customers/js/default.js"></script>
{% endblock %}

{% block body %}

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav navbar-left">

                    <li>
                        <a href="/app/">
                            <i class="fa fa-home"></i> 
                            Home
                        </a>
                    </li>

                    <li {% if page.uri equals "/customers/account/sessions" %}  class="active" {% endif %}>
                        <a href="/app/customers/account/sessions"><i class="fa fa-picture-o"></i> {{ labels.home_customer_sessions }}
                        </a>
                    </li>
                    <li {% if page.uri equals "/customers/shops" %}  class="active" {% endif %}>
                        <a href="/app/customers/shops">
                            <i class="fa fa-camera"></i> 
                            {{ labels.home_photographer_shop }}
                        </a>
                    </li>
                    <li {% if page.uri equals "/customers/cart" %}  class="active" {% endif %}>
                        <a href="/app/customers/cart"><i class="fa fa-shopping-cart"></i> {{ labels.customer_cart_cart }}
                        </a>
                    </li>

                    <li>
                        <a>
                            <i class="fa fa-eur"></i>
                            {{ labels.customer_index_currency }}:                    
                        </a>
                    </li>
                    <li>
                        <select class="currency-select form-control" id="sel1">
                            <option {% if cookies.currency equals "EUR" %} selected="selected" {% endif %}>
                                EUR
                            </option>
                            <option {% if cookies.currency equals "GBP" %} selected="selected" {% endif %}>
                                GBP
                            </option>
                        </select>
                    </li>
                </ul> 


            </div>

            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    {% block content %}

        <!-- Page Content -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">           
                    {% for shop in shops %}
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="thumbnail">
                                <img src="/assets/shops/{{ shop.login }}/sessions/{{ shop.showcasePicture.session.id }}/{{ shop.showcasePicture.fileName }}"/>
                                <div class="caption">
                                    <h4>
                                        <a href="/app/customers/shops/{{ shop.login }}">
                                            {{ shop.photographer.name }}
                                        </a>
                                    </h4>
                                    <p>
                                        {{ shop.photographer.name }} <br/>
                                        {{ shop.photographer.address }} <br/>
                                        {{ shop.photographer.city }} <br/>
                                        {{ shop.photographer.email }} <br/>
                                        {{ shop.photographer.phone }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    {% endblock %}

    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Fotoz</p>
                </div>

            </div>
        </footer>

    </div>
    <!-- /.container -->

    {% include "common/snippets/language_bar.twig" %}

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-collapse" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">



            </div>




            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

{% endblock %}
