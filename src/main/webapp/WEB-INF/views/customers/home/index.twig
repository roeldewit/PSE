
{% extends "common/bootstrap.twig" %}
{% block title %}
    Fotoz
{% endblock %}

{% block more_css %}
    <link href="/assets/common/css/default.css" rel="stylesheet"/>

    <link href="/assets/common/css/bootstrap/sb-admin/font-awesome/css/font-awesome.min.css" rel="stylesheet"/>

    <link href="/assets/customers/css/heroic-features.css" rel="stylesheet">
{% endblock %}

{% block more_js %}


    <script type="text/javascript" src="/assets/common/js/bootstrap/bootstrap.min.js"></script>


{% endblock %}

{% block body %}

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav navbar-left">

                    <li><a href="/app/customers/shops"><i class="fa fa-camera"></i> {{ labels.home_photographer_shop }}</a></li>

                    {% if username is not empty %}
                        <li><a href="/app/customers/account/sessions"><i class="fa fa-picture-o"></i> {{ labels.home_customer_sessions }}</a></li>
                        {% endif %}

                </ul> 

                <ul class="nav navbar-nav navbar-right">

        

                    {% if username is empty %}
                        <li><a href="/app/customers/register"><i class="fa fa-sign-in"></i> {{ labels.home_signup }}</a></li>

                        <li><a href="/app/login"><i class="fa fa-user"></i> {{ labels.home_login }}</a></li>

                    {% else %}
                        <li><a href="/logout"><i class="fa fa-sign-out"></i> {{ labels.home_logout }}</a></li>



                    {% endif %}

                </ul>



            </div>




            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <img src="/assets/customers/img/Logo.png" >
        </header>
        <header class="jumbotron hero-spacer">
            <h2>{{ labels.home_body_message_welcome }}</h2>
            <p>{{ labels.home_body_message_intro_text }} </p>
        </header>



    </div>

</div>
<!-- /.container -->

<div class="container">

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Fotoz</p>
            </div>

        </div>
    </footer>

</div>
<!-- /.container -->

{% include "common/snippets/language_bar.twig" %}

<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-collapse " role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">



        </div>


        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="/app/producer/dashboard">{{ labels.home_producerlogin }}</a>
                </li>

                <li>
                    <a href="/app/photographers/shop/">{{ labels.home_photographerlogin }}</a>
                </li>
            </ul>
        </div>


        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

{% endblock %}