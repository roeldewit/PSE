{% extends "customers/shops/index.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">

                <p>
                    {% for error in errors %}

                    <div class="row alert alert-danger">
                        <div class="col-lg-12">
                            {{ error }}
                        </div>
                    </div>

                    {% endfor %}
                </p>

                <form method="POST" action="/app/customers/account/sessions">    
                    <p class="lead">
                        {{labels.customer_account_sessions_add_form_header}}
                    </p>

                    <div class="form-group">
                        <label style="width:35%">{{ labels.customer_account_sessions_add_form_session_code }}</label>
                        <input name="code" class="form-control" style="display:inline;width:60%;" required autofocus>
                    </div>              
                    <button type="submit" class="btn btn-default">{{ labels.customer_account_sessions_add_form_button_submit }}</button>
                </form>

            </div>

            <div class="col-md-9">
                {% block inner_content %}
                    <p>
                    <p class="lead">
                        {{ labels.customer_account_sessions_yoursessions }}
                    </p>

                    <div class="list-group">
                        {% for session in sessions %}
                            <a href="/app/customers/shops/{{ session.shop.login }}/sessions/{{ session.id }}/" class="list-group-item">
                                {{ session.title }}
                            </a>
                        {% endfor %}
                    </div>
                    </p>
                {% endblock %}
            </div> 
        </div>
    </div>
{% endblock %}
