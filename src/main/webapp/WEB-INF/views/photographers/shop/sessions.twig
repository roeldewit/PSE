{% extends "photographers/shop/index.twig" %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ labels.photographer_shop_index_item_sessions }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p>
                {{ labels.photographer_shop_sessions_body_message }}
            </p>
        </div>
    </div>
            
    <div class="row">
        <div class="col-lg-12">
            <a href="/app/photographers/shop/sessions/new" class="btn btn-default">
                {{ labels.photographer_shop_sessions_button_new }}
            </a>
        </div>
    </div>
            
    <div class="row">
        <div class="col-lg-12">
            {% if sessions is empty %}
                <p>
                    {{ labels.photographer_shop_sessions_table_nocontent }}
                </p>
            {% else %}
                <div class="table-responsive">            
                    <table class="table table-hover table-striped submitted-photos-table">
                        <thead>
                            <tr>
                                <th>
                                    {{ labels.photographer_shop_sessions_table_title }}                                    
                                </th>
                                <th>
                                    {{ labels.photographer_shop_sessions_table_description }}                                    
                                </th>
                                <th>
                                    {{ labels.photographer_shop_sessions_table_ispublic }}
                                </th>
                            </tr>
                        </thead>
                        <tbody>                     
                            {% for session in sessions %}
                            <tr>                                    
                                <td>
                                    {{ session.title }}
                                </td>
                                <td>
                                    {{ session.description }}
                                </td>
                                <td>
                                    {% if session.isPublic %}
                                        {{ labels.photographer_shop_sessions_table_ispublic_yes }}
                                    {% else %}
                                        {{ labels.photographer_shop_sessions_table_ispublic_no }}
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}