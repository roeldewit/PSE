{% extends "photographers/shop/index.twig" %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ labels.photographer_shop_index_item_sessions }}
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p>
                {{ labels.photographer_shop_sessions_new_body_message }}
            </p>
        </div>
    </div>
    
    {% for error in errors %}
            
    <div class="row alert alert-danger">
        <div class="col-lg-12">
            {{ error }}
        </div>
    </div>
            
    {% endfor %}
            
    <div class="row">
        <div class="col-lg-4">
            <form method="POST" action="/app/photographers/shop/{{shopId}}/sessions/new">    
                <h3>
                    {{ labels.photographers_shop_sessions_new_form_header }}
                </h3>
                <div class="form-group">
                    <label>{{ labels.photographers_shop_sessions_new_form_title }}</label>
                    <input name="title" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>{{ labels.photographers_shop_sessions_new_form_description }}</label>
                    <input name="description" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>{{ labels.photographers_shop_sessions_new_form_ispublic }}</label>
                    <input type="checkbox" name="isPublic" value="true" style="width:50px;" class="form-control">
                </div>              
                <button type="submit" class="btn btn-default">{{ labels.photographers_shop_sessions_new_form_button_submit }}</button>
            </form>  
        </div>
    </div>
{% endblock %}