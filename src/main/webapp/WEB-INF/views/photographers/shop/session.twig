{% extends "photographers/shop/sessions.twig" %}


{% block inner_content %}
    <h1>
        {{ session.title }}
    </h1>

    <p>
        {{ session.description }}
    </p>
    
     {% for error in errors %}
            
    <div class="row alert alert-danger">
        <div class="col-lg-12">
            {{ error }}
        </div>
    </div>
            
    {% endfor %}
    
    {% for picture in session.pictures %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="/assets/shops/{{ shop.login }}/sessions/{{ session.id }}/{{ picture.fileName }}">
                <div class="caption">
                    <h4 class="pull-right">
                        &euro; {{ picture.price }}
                    </h4>
                    <h4>
                        <a href="#">
                            {{ picture.title }}
                        </a>
                    </h4>
                    <p>
                        {{ picture.description }}
                    </p>

                    <p>
                        <form class="form-signin" method="post" role="form">
                        change price:
                         

                        <input type="hidden"  value ="{{picture.id}}" id="picture_id" name="picture_id">
                        <input type="number" step="0.01" id="price" name="price" class="form-control" required autofocus>
                        <button class="btn btn-lg btn-default btn-block" type="submit">
                            Change
                        </button>
                        </form>

                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
